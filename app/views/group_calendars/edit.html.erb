<div class="text-center">
<div class="row">
        <div class="col-sm-6 offset-sm-3">
            <div class="text-center">
                <h4><%= current_group.name %> のカレンダー</h4>
                <p>予定の編集</p>
                <%= form_with(model: @group_calendar, local: true) do |f| %>
                    <%= render 'layouts/calendar_form', calendar: @group_calendar, f: f %>
                    <%= hidden_field_tag :group_id, @group.id %>
                    <%= f.submit '更新', class: 'btn btn-primary btn-block' %>
                <% end %>
            </div>
        </div>
    </div>
</div>