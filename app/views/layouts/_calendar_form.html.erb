<div class="row">
    <div class="col-sm-6 offset-sm-3">
        <%= form_with(model: calendar, local: true) do |f| %>
            <%= render 'layouts/error_messages', model: calendar %>

            <div class="form-group">
                <%= f.label :title, '予定 (※必須）' %>
                <%= f.text_field :title, class: 'form-control', placeholder: "会議" %>
            </div>
            <div class="form-group">
                <%= f.label :content, '内容' %>
                <%= f.text_area :content, class: 'form-control', placeholder: "グッズについて" %>
            </div>
            <div class="form-group">
                <%= f.label :start_time, '開始　(※必須）' %>
                <%= f.text_field :start_time, class: 'form-control', placeholder: "2020/07/22 10:00" %>
            </div>
            <div class="form-group">
                <%= f.label :end_time, '終了' %>
                <%= f.text_field :end_time, class: 'form-control', placeholder: "2020/07/22 12:00" %>
            </div>
            
            
            <%= f.submit '登録', class: 'btn btn-primary btn-block' %>
        <% end %>
    </div>
</div>
