<!--全共通のカレンダー-->
<div class="row">
    <div class="col-sm-12">
      <%= link_to '予定を追加する', new_calendar_path, class: 'btn btn-primary' %>
      <%= month_calendar events: model do |date, calendars| %>
        <%= date.day %>
        <% calendars.each do |calendar| %>
          <div>
            <%= link_to calendar.title, calendar_path(calendar) %>
          </div>
        <% end %>
      <% end %>
    </div>
</div>
