<div class="text-center">
<div class="row">
        <div class="col-sm-6 offset-sm-3">
            <div class="text-center">
                <h4><%= current_user.name %>さんのカレンダー</h4>
                <p>新しい予定の追加</p>
                <% if current_user == @calendar.user %>
                    <%= form_with(model: @calendar, local: true) do |f| %>
                        <%= render 'layouts/calendar_form', calendar: @calendar, f: f %>
                        <%= f.submit '登録', class: 'btn btn-primary btn-block' %>
                    <% end %>
                <% end %>
            </div>
        </div>
    </div>
</div>