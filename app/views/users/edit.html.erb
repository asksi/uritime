<div class="row">
    <div class="col-sm-6">
        <%= form_with(model: @user, local: true) do |f| %>
            <%= render 'layouts/error_messages', model: @user %>
            <div class="form-group">
                <%= image_url(@user) %>
                <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png', class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= f.label :name, 'Name' %>
                <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= f.label :profile, 'Profile' %>
                <%= f.text_area :profile, class: 'form-control' %>
            </div>
            <%= f.submit 'ユーザ情報を更新する', class: 'btn btn-primary' %>
        <% end %>
    </div>
</div>